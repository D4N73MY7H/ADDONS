<!--  ###########################################    TEMPLATES    ##############################################################  -->

        <!--        BUSINESS Template -->
        <template id="dynamic_report_business_contract_report">
            <t t-set="data_report_landscape" t-value="True"/>
            <t t-call="web.external_layout">
            <t t-call="web.html_container">
                <div class="page">
                <h3 t-esc="n"></h3>
                <h3>Business Contracts Report</h3>
                <br/>
                <div>
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Partner</th>
                                <th>Amount Lek excluding TVSH</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td>
                                        <span t-esc="o.name"></span>
                                    </td>
                                    <td>
                                        <span t-esc="o.partner_id.name"></span>
                                    </td>
                                    <td>
                                        <span t-esc="o.amount_no_tvsh_lek"></span>
                                    </td>
                                    <td>
                                        <span t-esc="o.start_date"></span>
                                    </td>
                                    <td>
                                        <span t-esc="o.end_date"></span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                </div>
                </t>
            </t>
        </template>

