<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_res_company_form_employer" model="ir.ui.view">
            <field name="name">res.company.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="hr_cp.view_res_company_form_duns"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard']" position="after">
                    <field name="employer_name"/>
                    <field name="company_start_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>